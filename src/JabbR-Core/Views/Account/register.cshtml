@model JabbR_Core.ViewModels.RegisterViewModel

@{
    Layout = "_layout.cshtml";
}
<div class="row-fluid">
    <div class="span6 offset3">
        <div class="user-registration">
            <form class="form-horizontal" action="@Url.Content("~/account/create")" method="post">  <!--/* + Html.RequestQuery()*/-->
                @Html.ValidationSummary()
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span>
                            <input asp-for="Name" class="form-control" format=@LanguageResources.Account_UserName/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <!-- Html.TextBox("username", "input-block-level", LanguageResources.Account_UserName) -->
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-envelope"></i></span>
                            <input asp-for="Email" class="form-control" format=@LanguageResources.Account_UserName />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <!-- Html.TextBox("email", "input-block-level", LanguageResources.Account_Email) -->
                        </div>
                    </div>
                </div>
          <!--      atsignif (ViewBag.requirePassword) 
                {-->
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            <input asp-for="Password" class="form-control" format=@LanguageResources.Account_UserName />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            @Html.Password("password", "input-block-level", @LanguageResources.Account_Pass)
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control" format=@LanguageResources.Account_UserName />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            @Html.Password("confirmPassword", "input-block-level", @LanguageResources.Account_PassConfirm)
                        </div>
                    </div>
                </div>
              <!--  } -->
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn">@LanguageResources.Account_Register</button>
                        <a href="@Url.Content("~/account/login" /* + Html.RequestQuery()*/)" class="btn">@LanguageResources.Account_Cancel</a>
                    </div>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>